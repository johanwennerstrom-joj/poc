{
  "openapi": "3.0.1",
  "info": {
    "title": "A TODO-Task list application",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/todoapp"
    }
  ],
  "tags": [
    {
      "name": "todo",
      "description": "Todos management"
    }
  ],
  "paths": {
    "/tododone": {
      "get": {
        "tags": [
          "todo"
        ],
        "summary": "Get the list of all completed todos",
        "operationId": "todosGetAllCompleted",
        "responses": {
          "200": {
            "description": "List of all completed todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "deprecated": true
      }
    },
    "/todo": {
      "get": {
        "tags": [
          "todo"
        ],
        "summary": "Get the list of all todos",
        "operationId": "todosGetAll",
        "responses": {
          "200": {
            "description": "List of all todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "todo"
        ],
        "summary": "Create a new Todo",
        "operationId": "todoCreate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Todo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The created todo",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/todo/{todoId}": {
      "get": {
        "tags": [
          "todo"
        ],
        "summary": "Get a single todo based on its id",
        "operationId": "todoRead",
        "parameters": [
          {
            "name": "todoId",
            "in": "path",
            "description": "The id of the todo",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            },
            "example": "e1cb23d0-6cbe-4a29-b586-bfa424bc93fd"
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "todo"
        ],
        "summary": "Update an existing todo",
        "operationId": "todoUpdate",
        "parameters": [
          {
            "name": "todoId",
            "in": "path",
            "description": "The id of the todo",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            },
            "example": "e1cb23d0-6cbe-4a29-b586-bfa424bc93fd"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Todo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The updated todo",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "todo"
        ],
        "summary": "Delete an existing todo",
        "operationId": "todoDelete",
        "parameters": [
          {
            "name": "todoId",
            "in": "path",
            "description": "The id of the todo",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            },
            "example": "e1cb23d0-6cbe-4a29-b586-bfa424bc93fd"
          }
        ],
        "responses": {
          "204": {
            "description": "Todo deleted response"
          },
          "default": {
            "description": "Generic error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Todo": {
        "required": [
          "description"
        ],
        "type": "object",
        "properties": {
          "completed": {
            "type": "boolean",
            "description": "indicates if a todo is completed or not"
          },
          "description": {
            "type": "string",
            "description": "description of the todo",
            "example": "My important todo"
          },
          "id": {
            "type": "string",
            "description": "id of the todo",
            "readOnly": true,
            "example": "e1cb23d0-6cbe-4a29-b586-bfa424bc93fd"
          },
          "name": {
            "type": "string",
            "description": "name of the todo",
            "example": "Take out trash"
          }
        },
        "description": "Object representing a Todo"
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "description": "Error code that identify of the error",
            "format": "int32",
            "example": 1000
          },
          "message": {
            "type": "string",
            "description": "Short description of the error",
            "example": "Could not perform the task"
          }
        },
        "description": "Object representing an error"
      }
    }
  }
}
